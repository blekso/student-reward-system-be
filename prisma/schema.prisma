// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  aai       String  @id
  firstName String
  lastName  String
  title     String?
  email     String?
  iat       Int
  exp       Int

  statistics UserStatistics?
}

model UserStatistics {
  userAai String @id

  solvedCourses Int //out of 8
  gpa           Float //1.00 - 5.00 

  user User @relation(fields: [userAai], references: [aai], onDelete: Cascade)
}
