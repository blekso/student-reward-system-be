// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  aai       String  @id
  firstName String
  lastName  String
  title     String?
  email     String?
  iat       Int
  exp       Int

  statistics UserStatistics?
  claims     Claim[]
}

model UserStatistics {
  userAai String @id

  solvedCourses Int //out of 8
  gpa           Float //1.00 - 5.00 

  user User @relation(fields: [userAai], references: [aai], onDelete: Cascade)
}

model Claim {
  id Int @id @default(autoincrement())

  userAai  String
  txHash   String
  rewardId Int

  user   User   @relation(fields: [userAai], references: [aai], onDelete: Cascade)
  reward Reward @relation(fields: [rewardId], references: [id], onDelete: Cascade)

  @@unique([userAai, rewardId])
}

model Reward {
  id Int @id @default(autoincrement())

  name             String
  shortDescription String?
  description      String
  contractAddress  String
  imageUrl         String
  type             String

  claims         Claim[]
  claimCondition ClaimCondition?
}

model ClaimCondition {
  id Int @id @default(autoincrement())

  rewardId      Int    @unique
  solvedCourses Int //out of 8
  gpa           Float //1.00 - 5.00 
  reward        Reward @relation(fields: [rewardId], references: [id], onDelete: Cascade)

  @@unique([solvedCourses, gpa])
}
